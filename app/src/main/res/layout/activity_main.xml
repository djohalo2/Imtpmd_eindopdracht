        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/studiepunt_progress_bar"
        app:layout_constraintLeft_toLeftOf="@+id/studiepunt_progress_bar"
        app:layout_constraintRight_toRightOf="@+id/studiepunt_progress_bar"
